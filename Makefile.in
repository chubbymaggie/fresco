SHELL	:= /bin/sh

define configure
@echo configuring package $(@D) with $(configure_args)
mkdir -p $(@D)
(cd $(@D); ../$(srcdir)/$(@D)/configure $(configure_args))
endef

srcdir	:= @srcdir@
builddir:= @abs_builddir@

packages:= Prague Babylon Fresco Berlin GGI SDL \
           Clients-C++ Clients-Python Clients-Java Clients-Perl
subdirs	:= $(foreach package, $(packages), $(shell test -d $(srcdir)/$(package) && echo '$(package)'))

# Overridden by the clean-targets, allowing the same subdirs-rule to be used
# for everything.
action	:= all

.PHONY: all $(subdirs)
.PHONY: doc install install-doc depclean clean distclean maintainer-clean dist clean

all:	$(subdirs)

$(subdirs): %: %/Makefile
	@echo making $(action) in $@
	$(MAKE) -C $@ $(action)

doc:
	$(MAKE) action="doc"

install:
	$(MAKE) action="install"

install-doc:
	$(MAKE) action="install-doc"

uninstall:
	$(MAKE) action="uninstall"

depclean:
	find -name '*.d' -exec rm -f '{}' ';'

clean:
	$(MAKE) action="clean"

distclean:
	@echo 'This command removes Makefiles and auxiliary files;'
	@echo 'run configure to regenerate them.'
	$(MAKE) action="distclean"
	rm -f Makefile config.cache config.log config.status

maintainer-clean:
	@echo 'This command is intended for maintainers to use;'
	@echo 'it deletes configure and auxiliary files;'
	@echo 'run autogen.sh to regenerated them.'
	$(MAKE) action="maintainer-clean"
	rm -f Makefile config.cache config.log config.status configure

%/Makefile: $(srcdir)/%/Makefile.in
	@$(configure)

Babylon/Makefile: override configure_args	+= --with-Prague-prefix=$(builddir)/Prague
Fresco/Makefile: override configure_args	+= --with-Babylon-prefix=$(builddir)/Babylon
Berlin/Makefile: override configure_args	+= --with-Prague-prefix=$(builddir)/Prague \
                                                   --with-Babylon-prefix=$(builddir)/Babylon \
                                                   --with-Fresco-prefix=$(builddir)/Fresco
GGI/Makefile: override configure_args		+= --with-Prague-prefix=$(builddir)/Prague \
                                                   --with-Fresco-prefix=$(builddir)/Fresco \
                                                   --with-Berlin-prefix=$(builddir)/Berlin
SDL/Makefile: override configure_args		+= --with-Prague-prefix=$(builddir)/Prague \
                                                   --with-Fresco-prefix=$(builddir)/Fresco \
                                                   --with-Berlin-prefix=$(builddir)/Berlin
Clients-C++/Makefile: override configure_args	+= --with-Prague-prefix=$(builddir)/Prague \
                                                   --with-Babylon-prefix=$(builddir)/Babylon \
                                                   --with-Fresco-prefix=$(builddir)/Fresco \
                                                   --with-Berlin-prefix=$(builddir)/Berlin

