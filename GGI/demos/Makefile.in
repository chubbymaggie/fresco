SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= $(top_srcdir)/clients
cdir		:= ../config

define makedep
@echo generating dependencies for $(<F)
$(SHELL) -ec '$(CXX) $(DEPFLAGS) $(CPPFLAGS) $< | sed "s/$*\\.o[ :]*/$*\\.d $*\\.o : /g" > $@'
endef

define compile
@echo compiling $(@F)
$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(SOFLAGS) -c $< -o $@
endef

include $(cdir)/local.mk

#CPPFLAGS	+= @CPPFLAGS@
#LIBS		+= -lBerlin -lWarsaw -lBabylon -lPrague @LIBS@

TARGET	:= ../bin/ggiwrapper

vpath %.hh $(srcdir)
vpath %.cc $(srcdir)

all:	$(TARGET)

../bin/ggiwrapper:	ggiwrapper.o
	@echo linking $(@F)
	$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

depend:	

install:	all
	$(INSTALL) -d -m 755 $(DESTDIR)$(bindir)
	$(INSTALL) -m 755 $(TARGET) $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/$(TARGET)

clean:	
	rm -f $(TARGETS)
	rm -f *.o

distclean:	clean 
	rm -f Makefile

maintainer-clean: distclean

%.o:	%.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@


%.o:	%.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@
