SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= $(top_srcdir)/src
builddir	:= ..
cdir		:= $(builddir)/config

include $(cdir)/local.mk

# Compilation and linking flags.
HAVE_GGIMESA	:= @HAVE_GGIMESA@

SRC	:= Drawable.cc Extension.cc Pointer.cc Console.cc
DEP	:= $(patsubst %.cc, %.d, $(SRC))
OBJ	:= $(patsubst %.cc, %.o, $(SRC))

TARGET	:= ../lib/Fresco/Console/GGI.so

#ifeq ($(HAVE_GGIMESA), 1)
TARGET	+= ../lib/Fresco/Console/GGIGL.so

../lib/Fresco/Console/GGIGL.so: GGIGL.o

#endif

all:	$(TARGET)

$(TARGET):	$(DEP) $(OBJ)
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) $(SO_LDFLAGS) -o $@ $(OBJ) $(LIBS)

install:	all
		$(INSTALL) -d -m 755 $(DESTDIR)$(libdir)/Fresco/Console
		$(INSTALL) -m 755 $(TARGET) $(DESTDIR)$(libdir)/Fresco/Console

uninstall:
		rm -f $(DESTDIR)$(libdir)/Fresco/Console/$(TARGET)

clean:	
		rm -f $(TARGET)
		rm -f *.o *.d

distclean:	clean
		rm -f Makefile

maintainer-clean: distclean

%.d:	$(srcdir)/%.cc
	@echo generating dependencies for $<
	$(SHELL) -ec '$(CXX) $(DEPFLAGS) $(CPPFLAGS) $< | sed "s/$*\\.o[ :]*/$*\\.d $*\\.o : /g" > $@'
%.o:	$(srcdir)/%.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SO_CXXFLAGS) -c $< -o $@

ifeq (,$(findstring $(MAKECMDGOALS), clean distclean maintainer-clean))
-include $(DEP)
endif
