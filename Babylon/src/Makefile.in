SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= $(top_srcdir)/src
cdir		:= ../config
hdir		:= $(top_srcdir)/include

include $(cdir)/local.mk

CXXFLAGS	+= $(SO_CXXFLAGS)
LDFLAGS		+= $(SO_LDFLAGS)
CPPFLAGS        += -DRC_MODULEPATH='"$(libdir)/Babylon"'

SRC		:= String.cc Char.cc Dictionary.cc utils.cc vis_iterator.cc
HDR		:= $(patsubst $(hdir)/%, %, $(wildcard $(hdir)/Babylon/*.hh))
DEP		:= $(patsubst %.cc, %.d, $(SRC))
OBJ		:= $(patsubst %.cc, %.o, $(SRC))
SYN		:= $(patsubst Prague/%.hh, %.syn, $(HDR))

TARGET		:= libBabylon.so

vpath %.hh  $(hdir)/Babylon

.PHONY: install uninstall clean distclean maintainer-clean dist

all:	$(TARGET)

$(TARGET):	$(OBJ)
	@echo linking $(@F)
	$(CXX) $(LDFLAGS) -o $@ $(OBJ) $(LIBS)

install:	all
	$(INSTALL) -d -m 755 $(DESTDIR)$(libdir)
	$(INSTALL) -m 755 $(TARGET) $(DESTDIR)$(libdir)
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Babylon
	@for header in $(HDR); do \
	  if ! cmp -s $(hdir)/$$header $(DESTDIR)$(includedir)/$$header 2>/dev/null; then \
	    echo "$(INSTALL) -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/$$header"; \
            $(INSTALL) -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/$$header; \
	  else \
	    echo "$(DESTDIR)$(includedir)/$$header is up to date"; \
          fi; \
	done
	$(INSTALL) -d -m 755 $(DESTDIR)$(bindir)
	$(INSTALL) -m 755 ../bin/Babylon-config $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/Babylon-config
	rm -f $(DESTDIR)$(libdir)/libBabylon.so

clean:	
	rm -f $(TARGET)
	rm -f *.o *.d

distclean:	clean
	rm -f Makefile $(hdir)/Babylon/config.hh \
		$(cdir)/config.log $(cdir)/config.status \
		../bin/Babylon-config

maintainer-clean: distclean
	rm -f $(top_srcdir)/configure $(top_srcdir)/config/config.hh.in \
		$(top_srcdir)/config/aclocal.m4

%.d:	$(srcdir)/%.cc $(hdir)/Babylon/%.hh
	@echo generating dependencies for $(<F)
	$(SHELL) -ec '$(CXX) $(DEPFLAGS) $(CPPFLAGS) $< | sed "s/$*\\.o[ :]*/$*\\.d $*\\.o : /g" > $@'

%.o:	$(srcdir)/%.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

ifeq (,$(findstring $(MAKECMDGOALS), clean distclean maintainer-clean))
-include $(DEP)
endif
