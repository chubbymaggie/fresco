SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= $(top_srcdir)/src
cdir		:= ../config

TARGETS		:= 

all:

install:	all
	@for target in $(TARGETS); do \
	  $(SHTOOL) install -C -m 755 $$target $(DESTDIR)$(bindir); \
	done

uninstall:
	for target in $(TARGETS) ; do
	  rm -f $(DESTDIR)$(bindir)/$$target; \
	done

clean:	
	rm -f ../bin/$(TARGETS)

distclean:	clean
	rm -f Makefile

maintainer-clean: distclean
