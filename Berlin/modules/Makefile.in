SHELL	:= /bin/sh

cdir		:= ../config

include $(cdir)/local.mk

subdirs := Drawing/PostScript

ifeq ($(HAVE_LIBART), 1)
subdirs	+= Drawing/libArt
endif

ifeq ($(HAVE_GL), 1)
subdirs += Drawing/openGL
endif

subdirs	+= Layout Commands Tools Images Figures Primitives Text Widgets/Motif \
	   Gadgets Desktop Unidraw

# Overridden by the clean-targets, allowing the same subdirs-rule to be used
# for everything.
action	:= all

.PHONY: all $(subdirs)
.PHONY: install depclean clean distclean maintainer-clean dist clean

all:	$(subdirs)

$(subdirs):
	@echo making $(action) in $@
	$(MAKE) -C $@ $(action)

install:
	$(MAKE) action="install"

uninstall:
	$(MAKE) action="uninstall"

depclean:
	find -name '*.d' -exec rm -f '{}' ';'

clean:
	$(MAKE) action="clean"

distclean:
	@echo 'This command removes Makefiles and auxiliary files;'
	@echo 'run configure to regenerate them.'
	$(MAKE) action="distclean"
	rm -f Makefile config/local.mk config.cache config.log config.status

maintainer-clean:
	@echo 'This command is intended for maintainers to use;'
	@echo 'it deletes configure and auxiliary files;'
	@echo 'run autogen.sh to regenerated them.'
	$(MAKE) action="maintainer-clean"
	rm -f Makefile config/local.mk config.cache config.log config.status \
		configure config/aclocal.m4
