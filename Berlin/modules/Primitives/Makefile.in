SHELL		:= /bin/sh

builddir	:= ../..
cdir		:= $(builddir)/config

include $(cdir)/local.mk
include $(cdir)/Server/local.mk

srcdir		:= $(top_srcdir)/src/Primitive
hdir		:= $(top_srcdir)/include/Primitive

# Compilation and linking flags.
CPPFLAGS	+= -I$(hdir)
LIBS		+= -lBerlin

SRC		:= Root.cc PrimitiveImpl.cc Primitives.cc Transformer.cc\
		   Light.cc PrimitiveKitImpl.cc

MODULE		:= Primitive

vpath %.hh  $(top_srcdir)/include/Berlin $(top_srcdir)/include/Primitive

include $(cdir)/Server/module.mk
