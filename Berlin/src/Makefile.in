SHELL	:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= @srcdir@
cdir		:= @top_builddir@/config
hdir		:= $(top_srcdir)/include/Berlin

include $(cdir)/local.mk

CXXFLAGS+= $(SO_CXXFLAGS)
LDFLAGS	+= $(SO_LDFLAGS)
LIBS	+= -lpng

SRC	:= Console.cc Logger.cc DefaultPOA.cc ServantBase.cc IdentifiableImpl.cc \
	   RefCountBaseImpl.cc RegionImpl.cc TransformImpl.cc TraversalImpl.cc \
	   AllocationImpl.cc GraphicImpl.cc MonoGraphic.cc \
	   PolyGraphic.cc Allocator.cc Requestor.cc DebugGraphic.cc \
	   DrawTraversalImpl.cc PickTraversalImpl.cc ControllerImpl.cc \
	   DesktopImpl.cc ScreenImpl.cc ScreenManager.cc EventManager.cc \
	   PositionalFocus.cc NonPositionalFocus.cc FilterImpl.cc SubjectImpl.cc \
	   PNG.cc RasterImpl.cc \
	   KitImpl.cc RCManager.cc

DEP	:= $(patsubst %.cc, %.d, $(SRC))
HDR	:= Console.hh Color.hh Event.hh GapBuffer.hh Geometry.hh \
	   ImplVar.hh Math.hh ObjectCache.hh Provider.hh Pool.hh QuadTree.hh \
	   RefCountVar.hh Vertex.hh LRUCache.hh Logger.hh ServantBase.hh \
	   IdentifiableImpl.hh RefCountBaseImpl.hh RegionImpl.hh \
	   TransformImpl.hh TraversalImpl.hh AllocationImpl.hh Provider.hh \
	   GraphicImpl.hh MonoGraphic.hh PolyGraphic.hh \
	   Allocator.hh Requestor.hh DebugGraphic.hh \
	   DrawTraversalImpl.hh PickTraversalImpl.hh ControllerImpl.hh \
	   DesktopImpl.hh ScreenImpl.hh ScreenManager.hh EventManager.hh \
	   PositionalFocus.hh NonPositionalFocus.hh FilterImpl.hh \
	   SubjectImpl.hh KitImpl.hh RCManager.hh DefaultPOA.hh \
	   ObserverImpl.hh config.hh
CHDR	+= DirectBuffer.hh Renderer.hh GLContext.hh SHMDrawableFactory.hh GGIDrawableFactory.hh
OBJ	:= $(patsubst %.cc, %.o, $(SRC))
SYN	:= $(patsubst %.hh, %.syn, $(HDR) $(CHDR))

LIBS	+= -lpng

TARGET	:= ../lib/libBerlin.so

vpath %.hh  $(hdir):$(hdir)/Console
vpath %.cc  $(srcdir)

all:	$(TARGET) ../bin/Berlin-config

$(TARGET):	$(OBJ)
	@echo linking $(@F)
	$(CXX) $(LDFLAGS) $(SO_LDFLAGS) -o $@ $(OBJ) $(LIBS)

../bin/Berlin-config: $(top_srcdir)/config/Berlin-config.in
	rm -f $@ $@.tmp
	$(EDIT) -e 's,@prefix\@,$(abs_top_builddir),g' \
		-e 's,@exec_prefix\@,$(abs_top_builddir),g' \
	  	-e 's,@CPPFLAGS\@,@CPPFLAGS@ -I$(abs_top_builddir)/include -I$(abs_top_srcdir)/include ,g' \
	  $< > $@.tmp
	chmod +x $@.tmp
	mv $@.tmp $@

config:  ../bin/Berlin-config

doc:	../share/doc/Berlin/html

../share/doc/Berlin/html:	$(SYN)
	@echo formatting $(@F)
	$(SYNOPSIS) -c ../config/synopsis.py -Wc,formatter=HTML -o $@ $(SYN)
	touch $@

install:	all
	$(INSTALL) -d -m 755 $(DESTDIR)$(libdir)
	$(INSTALL) -m 755 $(TARGET) $(DESTDIR)$(libdir)
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Berlin
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Berlin/Console
	@if ! cmp -s ../include/Berlin/acconfig.hh $(DESTDIR)$(includedir)/Berlin/acconfig.hh 2>/dev/null; then \
	  echo "$(INSTALL) -m 644 ../include/Berlin/acconfig.hh $(DESTDIR)$(includedir)/Berlin/acconfig.hh"; \
	  $(INSTALL) -m 644 ../include/Berlin/acconfig.hh $(DESTDIR)$(includedir)/Berlin/acconfig.hh; \
	else \
          echo "$(DESTDIR)$(includedir)/Berlin/$$header is up to date"; \
        fi
	for header in $(HDR) $(addprefix Console/, $(CHDR)); do \
	  if ! cmp -s $(hdir)/$$header $(DESTDIR)$(includedir)/$$header 2>/dev/null; then \
	    echo "$(INSTALL) -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/Berlin/$$header"; \
	    $(INSTALL) -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/Berlin/$$header; \
	  else \
	    echo "$(DESTDIR)$(includedir)/Berlin/$$header is up to date"; \
	  fi; \
	done
	$(INSTALL) -d -m 755 $(DESTDIR)$(bindir)
	rm -f $(DESTDIR)$(bindir)/Berlin-config $(DESTDIR)$(bindir)/Berlin-config.tmp
	$(EDIT) -e 's,@prefix\@,$(prefix),g' \
		-e 's,@exec_prefix\@,$(exec_prefix),g' \
	  	-e 's,@CPPFLAGS\@,@CPPFLAGS@ -I$(includedir),g' \
          $(top_srcdir)/config/Berlin-config.in > $(DESTDIR)$(bindir)/Berlin-config.tmp
	chmod +x $(DESTDIR)$(bindir)/Berlin-config.tmp
	mv $(DESTDIR)$(bindir)/Berlin-config.tmp $(DESTDIR)$(bindir)/Berlin-config

install-doc: doc
	mkdir -p $(DESTDIR)$(datadir)/Berlin/doc
	cp -r ../share/doc/Berlin/html $(DESTDIR)$(datadir)/doc/Berlin

uninstall:
	rm -f $(DESTDIR)$(libdir)/$(TARGET)
	rm -f $(DESTDIR)$(bindir)/Berlin-config
clean:	
	rm -f $(TARGET)
	rm -f *.o *.d

distclean:	clean
	rm -f Makefile $(hdir)/acconfig.hh \
	  $(cdir)/Server/local.mk $(cdir)/Server/module.mk \
	  $(cdir)/Server/config.log $(cdir)/Server/config.status \
	  $(bdir)/Berlin-config

maintainer-clean: distclean
	rm -f $(top_srcdir)/config/Server/configure $(top_srcdir)/config/Server/acconfig.hh.in \
	  $(top_srcdir)/config/Server/aclocal.m4

%.d:	%.cc %.hh
	@echo generating dependencies for $(<F)
	$(SHELL) -ec '$(CXX) $(DEPFLAGS) $(CPPFLAGS) $< | sed "s/$*\\.o[ :]*/$*\\.d $*\\.o : /g" > $@'

%.o:	%.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(SOFLAGS) -c $< -o $@

%.syn:	%.hh
	@echo parsing $(^F)
	$(SYNOPSIS) -c ../config/synopsis.py $(patsubst -I%, -I%, $(CPPFLAGS)) -Wp,-b,$(hdir) -Wc,parser=Berlin,linker=Berlin $(SFLAGS) -o $@ $?

ifeq (,$(findstring $(MAKECMDGOALS), config doc clean distclean maintainer-clean))
-include $(DEP)
endif
