SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= @srcdir@
cdir		:= @top_builddir@/config
hdir		:= $(top_srcdir)/include/Prague

include ../config/local.mk

CXXFLAGS	+= $(SO_CXXFLAGS)
LDFLAGS		+= $(SO_LDFLAGS)

SRC		:= logbuf.cc Tracer.cc regex.cc User.cc Stopwatch.cc Profiler.cc Time.cc \
	  	   File.cc Directory.cc Path.cc GetOpt.cc DataTypeManager.cc \
	  	   DLL.cc MMap.cc SHM.cc Thread.cc Timer.cc Signal.cc Fork.cc
SRC		+= ipcbuf.cc pipebuf.cc sockbuf.cc ptybuf.cc mmapbuf.cc \
	  	   Agent.cc Dispatcher.cc Coprocess.cc PipeAgent.cc TTYAgent.cc SocketAgent.cc
SRC		+= gzbuf.cc# xdrbuf.cc #bzbuf.cc 
SRC		+= protocol.cc echo.cc ftp.cc smtp.cc url.cc

SysH		:= logbuf.hh logstream.hh ntree.hh Tracer.hh regex.hh User.hh Process.hh \
                   Stopwatch.hh Profiler.hh Time.hh \
	  	   File.hh Directory.hh FLock.hh FdSet.hh Path.hh GetOpt.hh DataTypeManager.hh \
	  	   Memory.hh DLL.hh MMap.hh SHM.hh \
                   Thread.hh ThreadData.hh ThreadQueue.hh ThreadPool.hh \
		   Timer.hh Signal.hh Fork.hh Plugin.hh
IPCH		:= ipcbuf.hh pipebuf.hh sockbuf.hh sockstream.hh ptybuf.hh mmapbuf.hh convert.hh \
	  	   Agent.hh Dispatcher.hh Coprocess.hh PipeAgent.hh TTYAgent.hh SocketAgent.hh \
                   Acceptor.hh Connector.hh
FilterH		:= gzbuf.hh gzstream.hh# xdrbuf.cc #bzbuf.cc 
NetworkH	:= protocol.hh echo.hh ftp.hh smtp.hh url.hh

HDR		:= config.hh
HDR		+= $(patsubst %, Sys/%, $(SysH))
HDR		+= $(patsubst %, IPC/%, $(IPCH))
HDR		+= $(patsubst %, Filter/%, $(FilterH))
HDR		+= $(patsubst %, Network/%, $(NetworkH))
DEP		:= $(patsubst %.cc, %.d, $(SRC))
OBJ		:= $(patsubst %.cc, %.o, $(SRC))
SYN		:= $(patsubst %.hh, %.syn, $(notdir $(HDR)))

TARGET		:= ../lib/libPrague.so

vpath %.hh  $(hdir):$(hdir)/Sys:$(hdir)/IPC:$(hdir)/Filter:$(hdir)/Network
vpath %.cc  $(srcdir)/Sys:$(srcdir)/IPC:$(srcdir)/Filter:$(srcdir)/Network

.PHONY: all doc install install-doc clean distclean maintainer-clean dist

all:	$(TARGET) ../bin/Prague-config

$(TARGET):	$(OBJ)
	@echo linking $(@F)
	$(CXX) $(LDFLAGS) -o $@ $(OBJ) $(LIBS) -lz

../bin/Prague-config: $(top_srcdir)/config/Prague-config.in
	rm -f $@ $@.tmp
	$(EDIT) -e 's,@prefix\@,$(abs_top_builddir),g' \
	  	-e 's,@exec_prefix\@,$(abs_top_builddir),g' \
	  	-e 's,@CPPFLAGS\@,@CPPFLAGS@ -I$(abs_top_builddir)/include -I$(abs_top_srcdir)/include ,g' \
	  $< > $@.tmp
	chmod +x $@.tmp
	mv $@.tmp $@

doc:	../share/doc/Prague/html ../bin/Prague-config

../share/doc/Prague/html:	$(SYN)
	@echo formatting $(@F)
	@$(SYNOPSIS) -c ../config/synopsis.py -Wc,formatter=HTML -o $@ $(SYN)
	touch $@

install:	all
	$(INSTALL) -D -m 755 $(TARGET) $(DESTDIR)$(libdir)/$(notdir $(TARGET))
	@if ! cmp -s ../include/Prague/acconfig.hh $(DESTDIR)$(includedir)/Prague/acconfig.hh 2>/dev/null; then \
	  echo "$(INSTALL) -D -m 644 ../include/Prague/acconfig.hh $(DESTDIR)$(includedir)/Prague/acconfig.hh"; \
	  $(INSTALL) -D -m 644 ../include/Prague/acconfig.hh $(DESTDIR)$(includedir)/Prague/acconfig.hh; \
	else \
          echo "$(DESTDIR)$(includedir)/$$header is up to date"; \
        fi
	@for header in $(HDR); do \
	  if ! cmp -s $(hdir)/$$header $(DESTDIR)$(includedir)/Prague/$$header 2>/dev/null; then \
	    echo "$(INSTALL) -D -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/Prague/$$header"; \
	    $(INSTALL) -D -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/Prague/$$header; \
	  else \
	    echo "$(DESTDIR)$(includedir)/Prague/$$header is up to date"; \
	  fi; \
	done
	$(INSTALL) -d -m 755 $(DESTDIR)$(bindir)
	rm -f $(DESTDIR)$(bindir)/Prague-config $(DESTDIR)$(bindir)/Prague-config.tmp
	$(EDIT) \
	  -e 's,@prefix\@,$(prefix),g' \
          -e 's,@exec_prefix\@,$(exec_prefix),g' \
	  -e 's,@CPPFLAGS\@,@CPPFLAGS@ -I$(includedir),g' \
          $(top_srcdir)/config/Prague-config.in > $(DESTDIR)$(bindir)/Prague-config.tmp
	chmod +x $(DESTDIR)$(bindir)/Prague-config.tmp
	mv $(DESTDIR)$(bindir)/Prague-config.tmp $(DESTDIR)$(bindir)/Prague-config

install-doc: doc
	mkdir -p $(DESTDIR)$(datadir)/doc/Prague
	cp -r ../share/doc/Prague/html $(DESTDIR)$(datadir)/doc/Prague

uninstall:
	rm -fr $(DESTDIR)$(datadir)/Babylon/doc
	rm -f $(DESTDIR)$(bindir)/Prague-config
	rm -rf $(DESTDIR)$(includedir)/Prague
	rm -f $(DESTDIR)$(libdir)/libPrague.so

clean:	
	rm -f $(TARGET)
	rm -f $(OBJ) $(SYN)
#	cd Examples; $(MAKE) clean;

distclean:	clean
	rm -f Makefile $(hdir)/Prague/acconfig.hh \
		$(cdir)/config.log $(cdir)/config.status \
		../bin/Prague-config
#	cd Examples; $(MAKE) distclean

maintainer-clean: distclean
	rm -f $(top_srcdir)/configure $(top_srcdir)/config/acconfig.hh.in \
		$(top_srcdir)/config/aclocal.m4

%.d:	%.cc %.hh
	@echo generating dependencies for $(<F)
	$(SHELL) -ec '$(CXX) $(DEPFLAGS) $(CPPFLAGS) $< | sed "s/$*\\.o[ :]*/$*\\.d $*\\.o : /g" > $@'

%.o:	%.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(SOFLAGS) -c $< -o $@

DataTypeManager.o:	DataTypeManager.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(SOFLAGS) -ftemplate-depth-23 -c $< -o $@

%.syn:	%.hh
	@echo parsing $(^F)
	$(SYNOPSIS) -c ../config/synopsis.py -Wc,parser=Prague,linker=Prague $(SFLAGS) -o $@ $?

ifeq (,$(findstring $(MAKECMDGOALS), doc clean distclean maintainer-clean))
-include $(DEP)
endif
