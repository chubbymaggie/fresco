SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
srcdir		:= $(top_srcdir)/src
cdir		:= ../config
hdir		:= $(top_srcdir)/include

define makedep
@echo generating dependencies for $(<F)
$(SHELL) -ec '$(CXX) $(DEPFLAGS) $(CPPFLAGS) $< | sed "s/$*\\.o[ :]*/$*\\.d $*\\.o : /g" > $@'
endef

define compile
@echo compiling $(@F)
$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(SOFLAGS) -c $< -o $@
endef

define parse
@echo parsing $(@F)
@$(SYNOPSIS) -c ../config/synopsis.py -Wc,parser=Prague,linker=Prague $(SFLAGS) -o $@ $?
endef

include ../config/local.mk

CPPFLAGS	+= @CPPFLAGS@ -I$(hdir)
CXXFLAGS	+= $(SO_CXXFLAGS)
LDFLAGS		+= $(SO_LDFLAGS)
LIBS		+= @LIBS@

Sys		:= logbuf.cc Tracer.cc regex.cc User.cc Stopwatch.cc Profiler.cc Time.cc \
	  	   File.cc Directory.cc Path.cc GetOpt.cc DataTypeManager.cc \
	  	   DLL.cc MMap.cc SHM.cc Thread.cc Timer.cc Signal.cc Fork.cc
IPC		:= ipcbuf.cc pipebuf.cc sockbuf.cc ptybuf.cc mmapbuf.cc \
	  	   Agent.cc Dispatcher.cc Coprocess.cc PipeAgent.cc TTYAgent.cc SocketAgent.cc
Filter		:= gzbuf.cc# xdrbuf.cc #bzbuf.cc 
Network		:= protocol.cc echo.cc ftp.cc smtp.cc url.cc

SRC		:= $(patsubst %, Sys/%, $(Sys))
SRC		+= $(patsubst %, IPC/%, $(IPC))
SRC		+= $(patsubst %, Filter/%, $(Filter))
SRC		+= $(patsubst %, Network/%, $(Network))
HDR		:= Prague/config.hh
HDR		+= $(patsubst $(hdir)/%, %, $(wildcard $(hdir)/Prague/Sys/*.hh))
HDR		+= $(patsubst $(hdir)/%, %, $(wildcard $(hdir)/Prague/IPC/*.hh))
HDR		+= $(patsubst $(hdir)/%, %, $(wildcard $(hdir)/Prague/Filter/*.hh))
HDR		+= $(patsubst $(hdir)/%, %, $(wildcard $(hdir)/Prague/Network/*.hh))
DEP		:= $(patsubst %.cc, %.d, $(notdir $(SRC)))
OBJ		:= $(patsubst %.cc, %.o, $(notdir $(SRC)))
SYN		:= $(patsubst Prague/%.hh, %.syn, $(HDR))

TARGET		:= ../lib/libPrague.so

vpath %.hh  $(hdir)/Prague/Sys $(hdir)/Prague/IPC $(hdir)/Prague/Filter $(hdir)/Prague/Network

.PHONY: clean distclean maintainer-clean dist install

all:	$(TARGET)

$(TARGET):	$(OBJ)
	@echo linking $(@F)
	$(CXX) $(LDFLAGS) -o $@ $(OBJ) $(LIBS) -lz

doc:	$(SYN)
	@echo formatting $(@F)
	@$(SYNOPSIS) -c ../config/synopsis.py -Wc,formatter=PragueHTML -o $@ $(SYN)
	touch $@

install:	all
	$(INSTALL) -d -m 755 $(DESTDIR)$(libdir)
	$(INSTALL) -m 755 $(TARGET) $(DESTDIR)$(libdir)
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Prague/Sys
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Prague/IPC
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Prague/Filter
	$(INSTALL) -d -m 755 $(DESTDIR)$(includedir)/Prague/Network
	@if ! cmp -s ../include/Prague/acconfig.hh $(DESTDIR)$(includedir)/Prague/acconfig.hh 2>/dev/null; then \
	  echo "$(INSTALL) -m 644 ../include/Prague/acconfig.hh $(DESTDIR)$(includedir)/Prague/acconfig.hh"; \
	  $(INSTALL) -m 644 ../include/Prague/acconfig.hh $(DESTDIR)$(includedir)/Prague/acconfig.hh; \
	else \
          echo "$(DESTDIR)$(includedir)/$$header is up to date"; \
        fi
	@for header in $(HDR); do \
	  if ! cmp -s $(hdir)/$$header $(DESTDIR)$(includedir)/$$header 2>/dev/null; then \
	    echo "$(INSTALL) -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/$$header"; \
	    $(INSTALL) -m 644 $(hdir)/$$header $(DESTDIR)$(includedir)/$$header; \
	  else \
	    echo "$(DESTDIR)$(includedir)/$$header is up to date"; \
	  fi; \
	done
	$(INSTALL) -d -m 755 $(DESTDIR)$(bindir)
	$(INSTALL) -m 755 ../bin/Prague-config $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/Prague-config
	rm -rf $(DESTDIR)$(includedir)/Prague
	rm -f $(DESTDIR)$(libdir)/libPrague.so

clean:	
	rm -f $(TARGET)
	rm -f *.o *.d
#	cd Examples; $(MAKE) clean;

distclean:	clean
	rm -f Makefile $(hdir)/Prague/acconfig.hh \
		$(cdir)/config.log $(cdir)/config.status \
		../bin/Prague-config
#	cd Examples; $(MAKE) distclean

maintainer-clean: distclean
	rm -f $(top_srcdir)/configure $(top_srcdir)/config/acconfig.hh.in \
		$(top_srcdir)/config/aclocal.m4

%.d:	$(srcdir)/Sys/%.cc $(hdir)/Prague/Sys/%.hh
	$(makedep)
%.d:	$(srcdir)/IPC/%.cc $(hdir)/Prague/IPC/%.hh
	$(makedep)
%.d:	$(srcdir)/Filter/%.cc $(hdir)/Prague/Filter/%.hh
	$(makedep)
%.d:	$(srcdir)/Network/%.cc $(hdir)/Prague/Network/%.hh
	$(makedep)
%.o:	$(srcdir)/Sys/%.cc
	$(compile)
DataTypeManager.o:	$(srcdir)/Sys/DataTypeManager.cc
	@echo compiling $(@F)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) $(SOFLAGS) -ftemplate-depth-23 -c $< -o $@
%.o:	$(srcdir)/IPC/%.cc
	$(compile)
%.o:	$(srcdir)/Filter/%.cc
	$(compile)
%.o:	$(srcdir)/Network/%.cc
	$(compile)

Sys/%.syn:	$(hdir)/Prague/Sys/%.hh
	$(parse)
IPC/%.syn:	$(hdir)/Prague/IPC/%.hh
	$(parse)
Filter/%.syn:	$(hdir)/Prague/Filter/%.hh
	$(parse)
Network/%.syn:	$(hdir)/Prague/Network/%.hh
	$(parse)

ifeq (,$(findstring $(MAKECMDGOALS), clean distclean maintainer-clean))
-include $(DEP)
endif
