SHELL		:= /bin/sh

top_srcdir	:= @topdir@
srcdir		:= $(top_srcdir)/src/Prague/Examples/IPC
builddir	:= ../../../..
cdir		:= $(builddir)/config
hdir		:= $(top_srcdir)/include
bdir		:= $(builddir)/bin

include $(cdir)/local.mk

CPPFLAGS	+= @CPPFLAGS@
LDFLAGS		+=
LIBS		+= -lPrague @LIBS@

TARGETS		:= MMapServer MMapClient echo PipeAgent TTYAgent Acceptor Connector

all:		$(TARGETS)

%.o:		$(srcdir)/%.cc
		@echo compiling $(@F)
		$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

MMapServer:	MMapServer.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

MMapClient:	MMapClient.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

echo:		echo.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

PipeAgent:	echo PipeAgent.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ PipeAgent.o $(LIBS)

TTYAgent:	TTYAgent.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Acceptor:	Acceptor.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Connector:	Connector.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

clean:	
		rm -f *.o *~

distclean:	clean
		rm -f $(TARGETS) Makefile

