SHELL		:= /bin/sh

top_srcdir	:= @top_srcdir@
top_builddir	:= @top_builddir@
srcdir		:= @srcdir@
cdir		:= $(top_builddir)/config
docdir		:= $(top_builddir)/share/doc/Prague

include $(cdir)/local.mk

CPPFLAGS	+= @CPPFLAGS@
LDFLAGS		+= -L ../../lib
LIBS		+= -lPrague @LIBS@

TARGETS		:= $(patsubst %, $(top_builddir)/bin/%, MMapServer MMapClient Echo PipeAgent TTYAgent Acceptor Connector)

vpath %.hh  $(srcdir)
vpath %.cc  $(srcdir)

all:		$(TARGETS)

%.o:	%.cc
		@echo compiling $(@F)
		$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

$(top_builddir)/bin/MMapServer:	MMapServer.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

$(top_builddir)/bin/MMapClient:	MMapClient.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

$(top_builddir)/bin/Echo:		Echo.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

$(top_builddir)/bin/PipeAgent:	$(top_builddir)/bin/Echo PipeAgent.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ PipeAgent.o $(LIBS)

$(top_builddir)/bin/TTYAgent:	TTYAgent.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

$(top_builddir)/bin/Acceptor:	Acceptor.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

$(top_builddir)/bin/Connector:	Connector.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

clean:	
		rm -f *.o *~

distclean:	clean
		rm -f $(TARGETS) Makefile

