SHELL		:= /bin/sh

top_srcdir	:= @topdir@
srcdir		:= $(top_srcdir)/src/Prague/Examples/Thread
builddir	:= ../../../..
cdir		:= $(builddir)/config
hdir		:= $(top_srcdir)/include
bdir		:= $(builddir)/bin

include $(cdir)/local.mk

CPPFLAGS	+= @CPPFLAGS@
LDFLAGS		+= -L../../../../lib
LIBS		+= -lPrague @LIBS@

TARGETS		:=   Thread Signal Timer Diner Queue ThreadPool

all:		$(TARGETS)

%.o:		$(srcdir)/%.cc
		@echo compiling $(@F)
		$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(OPTFLAGS) -c $< -o $@

Thread:		Thread.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Diner:		Diner.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Queue:		Queue.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

ThreadPool:	ThreadPool.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Data:		Data.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Signal:		Signal.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

Timer:		Timer.o
		@echo linking $(@F)
		$(CXX) $(LDFLAGS) -o $@ $^ $(LIBS)

clean:	
		rm -f core *.o *~

distclean:	clean
		rm -f $(TARGETS) Makefile
